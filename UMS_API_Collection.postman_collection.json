                },
                {
                  "key": "phone",
                  "value": "9876543211",
                  "type": "text"
                },
                {
                  "key": "state",
                  "value": "Maharashtra",
                  "type": "text"
                },
                {
                  "key": "city",
                  "value": "Mumbai",
                  "type": "text"
                },
                {
                  "key": "country",
                  "value": "India",
                  "type": "text"
                },
                {
                  "key": "pincode",
                  "value": "400001",
                  "type": "text"
                },
                {
                  "key": "address",
                  "value": "456 New Street",
                  "type": "text"
                },
                {
                  "key": "profile_image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
