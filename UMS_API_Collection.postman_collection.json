          },
          "response": []
        },
        {
          "name": "Delete My Account",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}"]
            },
            "description": "Delete own account (requires authentication)"
          },
          "response": []
        }
      ],
      "description": "User profile management - view, update, and delete own profile"
    },
    {
      "name": "Admin - User Management",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users?page=1&limit=10&search=&role=",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search by name, email, or phone"
                },
                {
                  "key": "role",
                  "value": "",
                  "description": "Filter by role (user/admin)"
                }
              ]
            },
            "description": "Get all users with pagination, search, and filtering (Admin only)"
          },
          "response": []
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
